  <%= f.input :text, :label => 'Followup', :label_html => { :class => "label-bold" }, :as => :text, :input_html => { :class => "input-xlarge", :rows => 2 }, :hint => (link_to_remove_association 'Ã—', f, :class => 'close remove-follow-up') %>

