<div class="nested-fields followup-field">
  
  <%= f.input :text, :label => 'Followup Question:', :label_html => { :class => "label-bold" } , :hint => (link_to_remove_association 'Ã—', f, :class => 'inline btn btn-danger btn-mini remove-follow-up') %>
