<div class="container">
<div class="row">
    <div class="span8"><img src="/assets/logo.png"></div>
    <div class="span4 login">Logout</div>
</div>

<div class="row">
  <div class="span12 main">
    <div class="grouptitle">Lower Northeast &rsaquo; #2</div>
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="span6">
    <div class="titlequestion">
      <%= @poll.text %>
    </div>
    <div class="summaryviz">
    placeholder for response graphs and visualizations
    </div>
    
  </div>


  <div class="span3">
    <div class="counterdash">
      <div class="responsecount"><%= @poll.responses.count %></div>
      <br>
      <span class="caption">responses</span>
    </div>
  </div>

  <div class="span3">
    <div class="settings">
    <span class="caption">Assigned phone</span>
    <br>
    <span class="settingstext"><%= @poll.phone %></span>
    <br>

    <span class="caption">Type</span>
    <br>
    <span class="settingstext"><%= @poll.poll_type %></span>
    <br>

    <span class="caption">Start date</span>
    <br>
    <span class="settingstext"><%= @poll.start_date.strftime("%m/%d/%Y at %I:%M%p") %></span>
    <br>

    <span class="caption">End date</span>
    <br>
    <span class="settingstext"><%= @poll.end_date.strftime("%m/%d/%Y at %I:%M%p") %></span>
    <br>
    

    <br>
    <input type="button" class="btn btn-danger" value="End poll">
    </div>
  </div>
</div>

<div class="row">
  <div class="span12 horiz"></div>
</div>

<div class="row">
  <div class="span12">
    <table class="table">
        <tr>
          <th>Timestamp</th>
          <th>Response</th>
          <th>Phone number</th>
        </tr>
    	<% @poll.responses.each do |resp| %>
    		<tr>
          <td><%= resp.created_at.strftime("%m/%d/%Y at %I:%M%p")%></td>
          <td><%= resp.response %></td>
          <td><%= resp.from %></td>
        </tr>
    	<% end %>
    </table>>

    <%= link_to "Export to csv", request.parameters.merge({:format => :csv})%> |
    <%= link_to 'Edit', edit_poll_path(@poll) %> |
    <%= link_to 'Back', polls_path %>
  </div>
</div>

</div>