<%= form_for(@poll) do |f| %>
  <% if @poll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

      <ul>
      <% @poll.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :text %>
    <%= f.text_area :text %>
  </div>
<!--   <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div> -->
  <div class="field">
    <%= f.label :start_date %>
    <%= f.datetime_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %>
    <%= f.datetime_select :end_date %>
  </div>
  <div class="field">
    <%= f.label :poll_type %>
    <%= f.select(:poll_type, options_for_select([['Open',"OPEN"],['Multiple Choice',"MULTI"]],1)) %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn' %>
  </div>
<% end %>
