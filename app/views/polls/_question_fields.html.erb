<div class="nested-fields container-entry">
  <div>
    <%= link_to_remove_association raw("<div class=\"btn btn-danger\">X</div>"), f, :class => "top-right" %>
  </div>

  <%= f.input :sequence, :as => :hidden %>
  <%= f.input :text, :label => "Question" %>
  <%= f.input :question_type, :label => "Type" , :collection=>[['Open','OPEN'],['Multiple Choice','MULTI'],['Yes / No', 'YN']] %>

  
  <div class="options">

    <%= f.simple_fields_for :options do |option| %>
      <%= render 'option_fields', :f => option %>
    <% end %>
    <%= link_to_add_association 'Add option', f, :options, 
            :class => "controls add-option-button"%>
    
  </div>
</div>

