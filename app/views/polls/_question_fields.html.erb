<div class="nested-fields">

  <%= f.input :sequence %><%= f.input :text, :hint => (link_to_remove_association "Remove question", f, :class => "inline") %>

  <fieldset>
    <div class="control-group">
      <div class="controls">
        <%= f.select(:question_type, options_for_select([['Open','OPEN'],['Multiple Choice','MULTI'],['Yes / No', 'YN']],1)) %>
      </div>
    </div>
  </fieldset>

  <div class="options">
    <%= f.simple_fields_for :options do |option| %>
      <%= render 'option_fields', :f => option %>
    <% end %>
    <%= link_to_add_association 'Add option', f, :options %>
  </div>
</div>
