<div class="nested-fields">
  <fieldset>
  <%= f.input :text, :hint => (link_to_remove_association "X", f, :class => "inline") %>
    <%= f.input :value %>

    <%= link_to_remove_association "Remove option", f %>

    <%= f.simple_fields_for :follow_up do |followup| %>
      <%= render 'question_fields', :f => followup %>
    <% end %>
  </fieldset>
  <div class="links">
    <%= link_to_add_association 'Add followup', f, :follow_up %>
  </div>
</div>
